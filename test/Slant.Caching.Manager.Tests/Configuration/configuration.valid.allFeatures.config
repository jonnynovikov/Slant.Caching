<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="cacheManager" type="Slant.Caching.Manager.Configuration.CacheManagerSection, Slant.Caching.Manager"/>
    </configSections>
    <cacheManager xmlns="https://jonnify.com/schemas/SlantCacheManager.xsd">
        <managers>
            <cache name="ExpirationVariances" updateMode="Up" enableStatistics="true">
                <!-- testing
                    h1 overriding exp settings,
                    h2 uses defaults
                    h3 has no defaults an no explicit settings
                    h4 has no defaults but overrides
                  -->
                <handle name="h1" ref="memSliding" expirationMode="None" timeout="50s"/>
                <handle name="h2" ref="memSliding"/>
                <handle name="h3" ref="noDefaults"/>
                <!-- also testing timeout=20 without suffix, this should translate into 20minutes -->
                <handle name="h4" ref="noDefaults" expirationMode="Absolute" timeout="20"/>
            </cache>
            <cache name="DefaultSysMemCache" updateMode="None">
                <!-- should use the defaults from <memoryCache><namedCaches> defined below -->
                <handle name="default" ref="memGenericSliding"/>
            </cache>
            <cache name="c3" updateMode="None" enableStatistics="false">
                <handle name="h1" ref="dicGeneric" expirationMode="Sliding" timeout="50s"/>
                <handle name="h2" ref="dicAbsolute" expirationMode="Sliding" timeout="20m"/>
            </cache>
            <cache name="onlyDefaultsCache">
                <handle name="defaultsHandle" ref="dicDefaults"/>
            </cache>
        </managers>
        <cacheHandles>
            <handleDef id="memGenericSliding"
                       type="Slant.Caching.Manager.MemoryCache.MemoryCacheHandle`1, Slant.Caching.Manager.MemoryCache"
                       defaultExpirationMode="Sliding" defaultTimeout="5m"/>
            <handleDef id="memGenericObjectSliding"
                       type="Slant.Caching.Manager.MemoryCache.MemoryCacheHandle`1, Slant.Caching.Manager.MemoryCache"
                       defaultExpirationMode="Sliding" defaultTimeout="5m"/>
            <handleDef id="memSliding"
                       type="Slant.Caching.Manager.MemoryCache.MemoryCacheHandle`1, Slant.Caching.Manager.MemoryCache"
                       defaultExpirationMode="Sliding" defaultTimeout="5m"/>
            <handleDef id="dicGeneric" type="Slant.Caching.Manager.Internal.DictionaryCacheHandle`1, Slant.Caching.Manager"
                       defaultExpirationMode="Sliding" defaultTimeout="5m"/>
            <handleDef id="dicSliding" type="Slant.Caching.Manager.Internal.DictionaryCacheHandle`1, Slant.Caching.Manager"
                       defaultExpirationMode="Sliding" defaultTimeout="5m"/>
            <handleDef id="dicAbsolute" type="Slant.Caching.Manager.Internal.DictionaryCacheHandle`1, Slant.Caching.Manager"
                       defaultExpirationMode="Absolute" defaultTimeout="10m"/>
            <handleDef id="noDefaults" type="Slant.Caching.Manager.Internal.DictionaryCacheHandle`1, Slant.Caching.Manager"
                       defaultExpirationMode="None"/>
            <handleDef id="dicDefaults" type="Slant.Caching.Manager.Internal.DictionaryCacheHandle`1, Slant.Caching.Manager"/>
        </cacheHandles>
    </cacheManager>
</configuration>
